{
  "name": "homehub-backend",
  "version": "1.0.0",
  "description": "Backend do HomeHub - Gest√£o de Casa Compartilhada",
  "author": "Seu Nome",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "lint": "tsc --noEmit",
    "start": "nest start",
    "dev": "npm run build && node dist/main.js",
    "dev:watch": "npm run build && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "prestart:prod": "npm run build",
    "start:prod": "node dist/main.js",
    "db:generate": "prisma generate --schema=src/shared/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/shared/database/prisma/schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=src/shared/database/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/shared/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/shared/database/prisma/schema.prisma",
    "db:seed": "ts-node src/shared/database/prisma/seed.ts",
    "db:reset": "prisma migrate reset --schema=src/shared/database/prisma/schema.prisma",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:cov": "jest --config jest.config.ts --coverage",
    "test:e2e": "jest --config jest-e2e.config.ts",
    "test:integration": "jest --config jest-integration.config.ts"
  },
  "prisma": {
    "schema": "src/shared/database/prisma/schema.prisma",
    "seed": "ts-node src/shared/database/prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/platform-socket.io": "^10.3.0",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/websockets": "^10.3.0",
    "@prisma/client": "^5.8.0",
    "@sentry/node": "^10.22.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^4.1.0",
    "ioredis": "^5.8.1",
    "nodemailer": "^8.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.6",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "jest": "^29.7.0",
    "prisma": "^5.8.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
